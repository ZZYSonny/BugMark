{
  "name": "bugmark",
  "displayName": "BookmarkForDebugging",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bugmark.command.markline",
        "title": "BugMark: bookmark current line"
      },
      {
        "command": "bugmark.contextmenu.setbreakpoint",
        "title": "Set break point"
      }
    ],
    "views": {
      "bugmark-container": [
        {
          "id": "bugmark.view.bookmarks",
          "name": "Node Dependencies"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bugmark-container",
          "title": "Bookmark",
          "icon": "$(bookmark)"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "bugmark.contextmenu.setbreakpoint",
          "when": "view == bugmark-container"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "dev:build": "esbuild src/extension.ts --outdir=out --bundle --platform=node --packages=external --sourcemap=inline",
    "dev:watch": "esbuild src/extension.ts --outdir=out --bundle --platform=node --packages=external --sourcemap=inline --watch"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3",
    "esbuild": "^0.19.11"
  }
}