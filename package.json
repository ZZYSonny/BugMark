{
  "name": "bugmark",
  "displayName": "BookmarkForDebugging",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bugmark-container",
          "title": "BugMark",
          "icon": "$(bookmark)"
        }
      ]
    },
    "views": {
      "bugmark-container": [
        {
          "id": "bugmark.view.bookmarks",
          "name": "Saved Bookmarks"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "bugmark.view.title.refresh",
          "when": "view == bugmark.view.bookmarks",
          "group": "navigation@0"
        }
      ],
      "view/item/context": [
        {
          "command": "bugmark.view.item.rename",
          "when": "view == bugmark.view.bookmarks",
          "group": "bugmark.view.bookmarks@0"
        },
        {
          "command": "bugmark.view.item.setbreakpoint",
          "when": "view == bugmark.view.bookmarks",
          "group": "bugmark.view.bookmarks@1"
        }
      ]
    },
    "commands": [
      {
        "command": "bugmark.command.markline",
        "title": "BugMark: bookmark current line",
        "icon": "$(check-all)"
      },
      {
        "command": "bugmark.view.title.refresh",
        "title": "BugMark: Refresh bookmark view",
        "icon": "$(refresh)"
      },
      {
        "command": "bugmark.view.item.goto",
        "title": "Goto file",
        "icon": "$(go-to-file)"
      },
      {
        "command": "bugmark.view.item.rename",
        "title": "Edit name",
        "icon": "$(edit)"
      },
      {
        "command": "bugmark.view.item.remove",
        "title": "Remove",
        "icon": "$(close)"
      },
      {
        "command": "bugmark.view.item.breakpoint",
        "title": "Set break point",
        "icon": "$(activate-breakpoints)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "dev:build": "esbuild src/extension.ts --outdir=out --bundle --platform=node --packages=external --sourcemap=inline",
    "dev:watch": "esbuild src/extension.ts --outdir=out --bundle --platform=node --packages=external --sourcemap=inline --watch"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3",
    "esbuild": "^0.19.11"
  }
}